# =============================================================================
# SUPABASE CONFIGURATION
# =============================================================================
# Get these from your Supabase project dashboard -> Settings -> API
# Project URL format: https://your-project-id.supabase.co
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-from-api-settings
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-from-api-settings

# =============================================================================
# EMAIL SERVICE
# =============================================================================
# Get API key from https://resend.com/api-keys
RESEND_API_KEY=re_your-resend-api-key

# =============================================================================
# APPLICATION URLS
# =============================================================================
# For development
NEXT_PUBLIC_BASE_URL=http://localhost:3000
SITE_URL=http://localhost:3000
# For production, update these to your actual domain:
# NEXT_PUBLIC_BASE_URL=https://your-domain.com
# SITE_URL=https://your-domain.com

# =============================================================================
# PAYMENT INTEGRATION (POLAR)
# =============================================================================
# Get these from your Polar dashboard -> Settings -> API
POLAR_ACCESS_TOKEN=polar_your-access-token
POLAR_SUCCESS_URL=http://localhost:3000/success
POLAR_WEBHOOK_SECRET=your-webhook-secret-from-polar

# =============================================================================
# AI SERVICES
# =============================================================================
# Get Groq API key from https://console.groq.com/keys
GROQ_API_KEY=gsk_your-groq-api-key
GROQ_MODEL=fastest
# Get Cohere API key from https://dashboard.cohere.ai/api-keys
COHERE_API_KEY=your-cohere-api-key
# AI system prompts for form building and analytics
ANALYTICS_AI_SYSTEM_PROMPT="You are an AI analytics assistant for form data analysis."
AI_FORM_SYSTEM_PROMPT="You are an AI form builder assistant."

# =============================================================================
# UPSTASH REDIS (for rate limiting)
# =============================================================================
# Get these from your Upstash console -> Redis -> Connect
UPSTASH_REDIS_REST_URL=https://your-redis-instance.upstash.io
UPSTASH_REDIS_REST_TOKEN=your-upstash-redis-token